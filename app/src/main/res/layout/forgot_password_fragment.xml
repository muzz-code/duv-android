<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_25dp"
    tools:context="ui.ForgotPasswordFragment">

    <TextView
        android:id="@+id/forgot_password_fragment_forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Forgot Password?"
        android:textColor="@color/oxblood_main"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgot_password_dummy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:fontFamily="@font/poppins"
        android:text="Enter your address below"
        android:textColor="@color/text_gray"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_fragment_forgot_password_text_view"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_fragment_forgot_password_text_view"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_fragment_forgot_password_text_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/forgot_password_email_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_fragment_forgot_password_text_view"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_fragment_forgot_password_text_view"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_dummy_text_view"
        app:srcCompat="@drawable/e" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_password_fragment_password_text_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_29dp"
        android:hint="Email Address"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_email_image_view"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_email_image_view"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_email_image_view">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_fragment_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:fontFamily="@font/poppins"
        android:text="Remember Password?  Login"
        android:textColor="@color/text_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_fragment_password_text_Input"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_fragment_password_text_Input"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_fragment_password_text_Input" />

    <Button
        android:id="@+id/forgot_password_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_login_sign_up_fragment_sign_up_button"
        android:text="SEND"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_fragment_password_text_Input"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_fragment_password_text_Input"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>